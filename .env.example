# Environment Configuration Example
# Copy this file to .env, .env.development, .env.staging, .env.production, or .env.test
# and fill in the appropriate values for your environment

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Node Environment (development, production, test, staging)
NODE_ENV=development

# Server Configuration
PORT=4000
HOST=localhost

# Logging
# Levels: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=debug

# Geospatial Settings
DEFAULT_H3_RESOLUTION=9
DEFAULT_BOUNDING_BOX_RADIUS_KM=5

# Data Pipeline Configuration
PIPELINE_INTERVAL_MS=5000
MAX_BATCH_SIZE=100
CACHE_TTL_SECONDS=300

# Performance Settings
WORKER_THREADS=4
MAX_CONNECTIONS=100

# Debug Settings (development/test only)
# DEBUG=surge-streamer:*
# DEBUG_COLORS=true

# Test Settings (test only)
# TEST_TIMEOUT_MS=5000
# MOCK_EXTERNAL_SERVICES=true

# Monitoring (staging/production only)
# ENABLE_PERFORMANCE_MONITORING=true
# ENABLE_ERROR_REPORTING=true

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/surge-streamer
DATABASE_URI=mongodb://localhost:27017/surge-streamer
DATABASE_NAME=surge-streamer

# Kafka Configuration
KAFKA_BROKERS=localhost:9092

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# GraphQL Configuration
GRAPHQL_PATH=/graphql
GRAPHQL_PLAYGROUND=true
GRAPHQL_INTROSPECTION=true

# ML Configuration
ML_MODEL_PATH=./models/surge-prediction
ML_PREDICTION_INTERVAL=300000
ML_TRAINING_INTERVAL=86400000
ML_HISTORY_WINDOW_SIZE=7

# Data Sources Configuration
# Replace with your actual API endpoints and credentials
RIDE_REQUEST_API_URL=https://api.example.com/ride-requests
RIDE_REQUEST_CLIENT_ID=your-client-id
RIDE_REQUEST_CLIENT_SECRET=your-client-secret
RIDE_REQUEST_REFRESH_INTERVAL_MS=1000

DRIVER_LOCATION_WS_URL=wss://api.example.com/driver-locations
DRIVER_LOCATION_JWT_SECRET=your-jwt-secret
DRIVER_LOCATION_REFRESH_INTERVAL_MS=1000

WEATHER_API_URL=https://api.example.com/weather
WEATHER_API_KEY=your-api-key
WEATHER_REFRESH_INTERVAL_MS=300000

TRAFFIC_API_URL=https://api.example.com/traffic
TRAFFIC_API_KEY=your-api-key
TRAFFIC_REFRESH_INTERVAL_MS=30000

EVENTS_API_URL=https://api.example.com/events
EVENTS_API_KEY=your-api-key
EVENTS_REFRESH_INTERVAL_MS=3600000

SOCIAL_API_URL=https://api.example.com/social
SOCIAL_OAUTH_KEY=your-oauth-key
SOCIAL_OAUTH_SECRET=your-oauth-secret
SOCIAL_REFRESH_INTERVAL_MS=60000 